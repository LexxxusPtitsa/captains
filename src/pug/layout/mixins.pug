mixin programmNavLink(link, name, first)

    if(first)
        li.programm__nav-li.programm__nav-li--active
            a(href=link).programm__nav-link.programm__nav-link--active=name
    else
        li.programm__nav-li
            a(href=link).programm__nav-link=name


mixin programmModuleItem(num, name)

    .programm__module-item
        div.programm__module-icon(class='programm__module-icon--'+num)
        .programm__module-name=name
mixin programmTeacher(link, name, rank, pos)
    .programm__teacher
        .programm__teacher-photo
            img(src=link alt="")
        .programm__teacher-info
            .programm__teacher-name=name
            .programm__teacher-rank=rank
            .programm__teacher-position=pos